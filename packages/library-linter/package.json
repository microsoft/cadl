{
  "name": "@cadl-lang/library-linter",
  "version": "0.1.0",
  "author": "Microsoft Corporation",
  "description": "Cadl library for linting another library.",
  "homepage": "https://github.com/Microsoft/cadl",
  "readme": "https://github.com/Microsoft/cadl/blob/master/README.md",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Microsoft/cadl.git"
  },
  "bugs": {
    "url": "https://github.com/Microsoft/cadl/issues"
  },
  "keywords": [
    "cadl"
  ],
  "type": "module",
  "main": "dist/src/index.js",
  "exports": {
    ".": "./dist/src/index.js",
    "./testing": "./dist/src/testing/index.js"
  },
  "typesVersions": {
    "*": {
      "*": [
        "./dist/src/index.d.ts"
      ],
      "testing": [
        "./dist/src/testing/index.d.ts"
      ]
    }
  },
  "cadlMain": "dist/src/index.js",
  "engines": {
    "node": ">=14.0.0"
  },
  "scripts": {
    "clean": "rimraf ./dist ./temp",
    "build": "tsc -p .",
    "watch": "tsc -p . --watch",
    "test": "mocha",
    "test-official": "c8 mocha --forbid-only",
    "lint": "eslint . --ext .ts --max-warnings=0",
    "lint:fix": "eslint . --fix --ext .ts"
  },
  "files": [
    "lib/*.cadl",
    "dist/**",
    "!dist/test/**"
  ],
  "peerDependencies": {
    "@cadl-lang/compiler": "~0.31.0",
    "@cadl-lang/eslint-plugin": "~0.1.0"
  },
  "devDependencies": {
    "@types/mocha": "~9.1.0",
    "@types/node": "~16.0.3",
    "@cadl-lang/compiler": "~0.31.0",
    "@cadl-lang/eslint-config-cadl": "~0.3.0",
    "eslint": "^8.12.0",
    "mocha": "~9.2.0",
    "c8": "~7.11.0",
    "rimraf": "~3.0.2",
    "typescript": "~4.7.2"
  }
}
