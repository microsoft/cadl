    "@cadl-lang/compiler": "~0.25.0",
    "@cadl-lang/rest": "~0.8.0"
  },
  "devDependencies": {
    "@types/mocha": "~9.1.0",
    "@types/node": "~14.0.27",
    "@cadl-lang/compiler": "~0.25.0",
    "@cadl-lang/rest": "~0.8.0",
    "mocha": "~9.1.0",
    "typescript": "~4.5.5"
