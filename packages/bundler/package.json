{
  "name": "@cadl-lang/bundler",
  "version": "0.1.0",
  "author": "Microsoft Corporation",
  "description": "Package to bundle a cadl library.",
  "homepage": "https://github.com/Azure/cadl",
  "readme": "https://github.com/Azure/cadl/blob/master/README.md",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Azure/cadl.git"
  },
  "bugs": {
    "url": "https://github.com/Azure/cadl/issues"
  },
  "keywords": [
    "cadl"
  ],
  "type": "module",
  "main": "dist/src/index.js",
  "cadlMain": "dist/src/index.js",
  "exports": {
    ".": "./dist/src/index.js",
    "./testing": "./dist/src/testing/index.js"
  },
  "typesVersions": {
    "*": {
      "*": [
        "./dist/src/index.d.ts"
      ],
      "testing": [
        "./dist/src/testing/index.d.ts"
      ]
    }
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "scripts": {
    "bundle": "node ./dist/src/cli.js",
    "clean": "rimraf ./dist ./temp",
    "build": "tsc -p .",
    "watch": "tsc -p . --watch",
    "test": "mocha",
    "test-official": "c8 mocha --forbid-only",
    "lint": "eslint . --ext .ts --max-warnings=0",
    "lint:fix": "eslint . --fix --ext .ts"
  },
  "files": [
    "lib/*.cadl",
    "dist/**",
    "!dist/test/**"
  ],
  "dependencies": {
    "@cadl-lang/compiler": "~0.30.0",
    "@rollup/plugin-virtual": "~2.1.0",
    "@rollup/plugin-commonjs": "~22.0.0-13",
    "@rollup/plugin-json": "~4.1.0",
    "@rollup/plugin-node-resolve": "~13.1.3",
    "@rollup/plugin-replace": "~2.4.2",
    "@rollup/plugin-multi-entry": "~4.1.0",
    "rollup": "~2.70.1",
    "vite": "^2.8.0",
    "globby": "~13.1.1"
  },
  "devDependencies": {
    "@types/mocha": "~9.1.0",
    "@types/node": "~16.0.3",
    "eslint": "^8.12.0",
    "mocha": "~9.2.0",
    "c8": "~7.11.0",
    "rimraf": "~3.0.2",
    "typescript": "~4.6.3"
  }
}
